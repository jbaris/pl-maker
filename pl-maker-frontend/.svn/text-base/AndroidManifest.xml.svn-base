<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.org.plmaker.activities"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:name="ar.org.plmaker.application.PlMakerApplication"
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/playlists" />
        <activity
            android:name=".NewPlaylistActivity"
            android:label="@string/new_playlist" />
        <activity
            android:name=".SelectPlaylistActivity"
            android:label="@string/select_playlist" />
        <activity
            android:name=".SelectPlaylistAndExportTypeActivity"
            android:label="@string/select_playlist" />
        <activity
            android:name=".EditPlaylistActivity"
            android:label="@string/edit_playlist" />
        <activity
            android:name=".ViewPlaylistActivity"
            android:label="@string/view_playlist" />
        <activity
            android:name=".ExportPlaylistActivity"
            android:label="@string/export_playlist" />
        <activity
            android:name=".SelectDirectoryActivity"
            android:label="@string/save" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk android:minSdkVersion="8" />

</manifest>